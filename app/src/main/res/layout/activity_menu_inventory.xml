<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mobile.MenuActivity">

    <LinearLayout
        android:id="@+id/lyt_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="36dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/lyt_production"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/inventory_data"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/ic_inventory"
                            android:button="@null"
                            android:checked="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/spaceBottom"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/inventory_data"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/lyt_inventory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/product_data"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/ic_production"
                            android:button="@null"
                            android:checked="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/spaceBottom"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/product_data"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>